{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "macroarc",
	"version": "0.1.0",
	"identifier": "com.macroarc.jumble",
	"build": {
		"beforeDevCommand": "npm run dev",
		"devUrl": "http://localhost:2360",
		"beforeBuildCommand": "npm run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"label": "main",
				"title": "MacroArc",
				"width": 800,
				"height": 700,
				"minWidth": 700,
				"minHeight": 600
			},
			{
				"label": "overlay-recorder",
				"title": "Overlay · Recorder",
				"url": "/?overlayPanel=recorder",
				"visible": false,
				"decorations": false,
				"resizable": true,
				"transparent": true,
				"alwaysOnTop": true
			},
			{
				"label": "overlay-autoclicker",
				"title": "Overlay · Auto Clicker",
				"url": "/?overlayPanel=autoclicker",
				"visible": false,
				"decorations": false,
				"resizable": true,
				"transparent": true,
				"alwaysOnTop": true
			},
			{
				"label": "overlay-library",
				"title": "Overlay · Library",
				"url": "/?overlayPanel=library",
				"visible": false,
				"decorations": false,
				"resizable": true,
				"transparent": true,
				"alwaysOnTop": true
			},
			{
				"label": "overlay-activity",
				"title": "Overlay · Activity",
				"url": "/?overlayPanel=activity",
				"visible": false,
				"decorations": false,
				"resizable": true,
				"transparent": true,
				"alwaysOnTop": true
			},
			{
				"label": "overlay-insights",
				"title": "Overlay · Insights",
				"url": "/?overlayPanel=insights",
				"visible": false,
				"decorations": false,
				"resizable": true,
				"transparent": true,
				"alwaysOnTop": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
